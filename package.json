    "esbuild": "^0.14.54",
    "eslint": "^8.56.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-solid": "0.13.0",
